<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.weatherforecast.WeatherForecastActivity">

    <data>
        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="com.shrikantbadwaik.weatherforcast.view.weatherforecast.WeatherForecastViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f6f7">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2a2a2a"
                android:layout_marginTop="56dp"
                android:textSize="96sp"
                android:textAlignment="center"
                android:text="@{viewModel.tempInC}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="20\u00B0"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#556799"
                android:textSize="36sp"
                android:textAlignment="center"
                android:layout_marginBottom="62dp"
                android:text="@{viewModel.city}"
                app:layout_constraintTop_toBottomOf="@+id/tv_temperature"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Pune"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_view01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_something_went_wrong"
                android:textColor="@android:color/white"
                android:textSize="54sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textAlignment="viewStart"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.35"/>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:background="#4a4a4a"
                android:text="@string/txt_retry"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:onClick="@{() -> viewModel.onRetryButtonClicked()}"
                app:layout_constraintTop_toBottomOf="@+id/text_view01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <com.shrikantbadwaik.weatherforcast.domain.LoadingIndicatorImageView
                android:id="@+id/iv_loading_indicator"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_loading"
                android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>